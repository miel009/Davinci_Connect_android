<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.CommentsActivity">

    <TextView
        android:id="@+id/tvCommentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comentarios de la App"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCommentsTitle"
        app:layout_constraintBottom_toTopOf="@+id/tvNewCommentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvNewCommentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Deseas dejar algún comentario sobre la app?"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/etNewComment"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etNewComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:gravity="top"
        android:hint="Escribe tu opinión..."
        android:inputType="textMultiLine"
        android:background="@android:drawable/edit_text"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSendComment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnSendComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENVIAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
